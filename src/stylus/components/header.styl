.to-top
  position: fixed
  right: 10px
  bottom: -40px
  transition: bottom .3s
  z-index: 200
  mix-blend-mode: exclusion
  .arrow-up
    icon-arrow(up, 20px, white, 2px)
    position: absolute
    bottom: 0
    right: 0
  a
    display: block
    width: 40px
    height: @width
.is-scrolled
  .to-top
    bottom: 10px