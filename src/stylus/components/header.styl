.site-header
  overflow: hidden
  position: fixed
  height: $size-header-h
  top: 0
  left: 0
  right: 0
  z-index: 100

.header-container
  position: fixed
  top: 0
  background: $color-header-bg
  height: 0
  width: 100%
  transition: height 0.3s
  &.is-active
    height: $size-header-h

.site-title
  font-size: 2.4rem
  font-family: $font-header
  margin: 0
  a
    link-simple: $color-main-fg

.site-content
  margin-top: $size-header-h

.site-branding
  center-vertically()
  position: absolute
  transition: top .3s

.is-scrolled
  .site-branding
    top: -100%

.header-container.is-active
  .site-branding
    top: 50%

.to-top
  position: fixed
  bottom: 3px
  right: @bottom