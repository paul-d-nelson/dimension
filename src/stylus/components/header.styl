.site-title
  margin: 0
  a
    link-simple: $color-main-bg

.site-header
  position: fixed
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 10px
  top: 0
  left: 0
  right: 0
  height: $size-header-h
  background: rgba(0, 0, 0, 0.5)
  // transition: background .3s
  z-index: 100

