.featured
  position: relative
  text-align: center
  background: black
  height: 75vh
  width: 100%
  a
    reset-link-fancy()
    fill-space()
    z-index: 10
    &:hover + .featured-thumb
      opacity: 0.9
  &-thumb
    fill-space()
    opacity: 0.7
    transition: opacity 0.3s
  &-header
    fill-space()
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center
    align-content: center
    max-width: 960px
    margin: auto
    opacity: 1
    padding: 2em
    color: $color-main-bg
    h1
      font-size: 6rem
      margin-top: .2em
    h2
      color: $color-main-bg
      display: inline-block
      font-size: 1.4rem
      padding: 6px 8px
      border: 2px solid $color-main-bg
    p
      font-size: 2rem

