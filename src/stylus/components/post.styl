// Header featured image
.single-post
  .post-header
    position: relative
    height: 100vh
    width: 100%
    figure
      height: 100vh
      width: 100%
      img
        height: 100vh
        width: auto

  .entry-header
    position: absolute
    bottom: 20%
    left: 20%

.cat-links
  font-size: 2rem

.entry-title
  font-size: 2.6rem
  margin-top: 1rem

// Styles for single pages (not on homepage)
.single-post
  .post-header
    color: #fff
    a
      link-fancy-reverse: #fff darken(#fff, 20%) true
  .entry-header
    max-width: $font-size * 40
  .entry-title
    font-size: 5.6rem
    color: #fff
  .entry-meta
    a
      link-fancy-reverse: #fff #fff

.tags-links
  a
    padding: 0 3px
  a:before
    content: "#"
    font-size: 1.8rem
    color: $color-main-fg