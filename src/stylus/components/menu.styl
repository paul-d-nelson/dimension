.main-navigation
  position: fixed
  display: flex
  justify-content: flex-end
  align-items: center
  top: -($size-header-h)
  left: 20px
  right: 60px
  height: $size-header-h
  margin: 0
  background: white
  transition: top 0.3s ease-in-out
  z-index: 90
  .menu
    margin-right: 10px
  ul
    inline-list()
  a
    link-simple: $color-main-fg

.main-navigation.is-active
  top: 0

