// ---------------
// Global Settings
// ---------------

// Font stacks
// ---------------

// Common fonts
$helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
$helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
$georgia = Georgia, Cambria, "Times New Roman", Times, serif
$lucida-grande = "Lucida Grande", Tahoma, Verdana, Arial, sans-serif
$monospace = Consolas, "Liberation Mono", Menlo, Courier, monospace
$verdana = Verdana, Geneva, sans-serif
$roboto = 'Roboto', sans-serif

$sans-serif = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"

// Naming Conventions:
//
// (include '-f' if fallback)
//
// $font-[element][-f]

// Fallback fonts
// Will be used if webfonts fail to load and as webfonts are loading
$font-main = $sans-serif
$font-header = $sans-serif

// Theme fonts
// Webfonts used once they have been loaded; add to main.js
// $font-main = 'Roboto', $font-main-f
// $font-header = 'Roboto', $font-header-f
$font-mono = 'Source Code Pro', $monospace

